-# frozen_string_literal: true
= simple_form_for(@comment_news) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  .form-inputs
    = f.association :user
    = f.association :anime_news
    = f.input :msg

  .form-actions
    = f.button :submit
