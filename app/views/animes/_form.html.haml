-# frozen_string_literal: true
= simple_form_for(@anime) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  .form-inputs
    = f.input :name
    = f.input :synosis
    = f.input :day_in_week
    = f.input :show_time
    = f.input :on_air
    = f.input :episode

  .form-actions
    = f.button :submit, 'Submit'
