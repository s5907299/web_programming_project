.card{:class => "col-sm-10 mb-3 mt-3"}
  .card-body
    %div{:class=>'row'}
      %div{:class=>'col-sm-3'}
        = link_to anime.name, 'animes/'+(anime.id.to_s)
      %div{:class=>'col-sm-5'}
        %div{:class=>''} #{anime.synosis}
      %div{:class=>'col-sm-1'}
        =link_to 'like', 'home',class:"fs-5"
      %div{:class=>'col-sm-1'}
        = link_to 'follow', 'home',class:"fs-5"
      %div{:class=>'col-sm-2'}
        = link_to 'add to list', 'home',class:"fs-5"